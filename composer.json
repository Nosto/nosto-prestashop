{
  "name": "nosto/nostotagging",
  "description": "Nosto Module for Prestashop",
  "require": {
    "nosto/php-sdk": "dev-develop#5f0474a"
  },
  "require-dev": {
    "phing/phing": "2.*",
    "phan/phan": "^0.8.9",
    "phpmd/phpmd": "^2.5",
    "squizlabs/php_codesniffer": "2.6.*",
    "sebastian/phpcpd": "*",
    "wimg/php-compatibility": "^8.0",
    "prestashop/ps": "1.7.1.1",
    "icanboogie/cldr": "1.8.0"
  },
  "config": {
    "vendor-dir": "libs"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "prestashop/ps",
        "version": "v1.7.1.1",
        "dist": {
          "url": "https://github.com/PrestaShop/PrestaShop/archive/1.7.2.0.zip",
          "type": "zip",
          "reference": "1.7.1.1"
        }
      }
    }
  ],
  "scripts": {
    "post-install-cmd": "\"libs/bin/phpcs\" --config-set installed_paths libs/wimg/php-compatibility",
    "post-update-cmd" : "\"libs/bin/phpcs\" --config-set installed_paths libs/wimg/php-compatibility"
  }
}
